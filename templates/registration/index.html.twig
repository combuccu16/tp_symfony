{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
  <div class="card shadow-lg p-4 rounded-4" style="max-width: 480px; width: 100%;">
    <h2 class="text-center mb-4 fw-bold text-primary">Créer un compte</h2>

    {{ form_start(registrationForm) }}

    <div class="mb-3">
      {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
      {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre email'}}) }}
      {{ form_errors(registrationForm.email) }}
    </div>

    <div class="row g-3">
      <div class="col-md-6">
        {{ form_label(registrationForm.firstname, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
        {{ form_widget(registrationForm.firstname, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'}}) }}
        {{ form_errors(registrationForm.firstname) }}
      </div>
      <div class="col-md-6">
        {{ form_label(registrationForm.lastname, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
        {{ form_widget(registrationForm.lastname, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
        {{ form_errors(registrationForm.lastname) }}
      </div>
    </div>

    <div class="mb-3 mt-3">
      {{ form_label(registrationForm.password, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
      {{ form_widget(registrationForm.password, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}}) }}
      {{ form_errors(registrationForm.password) }}
    </div>

    

    <div class="d-grid">
      <button type="submit" class="btn btn-primary fw-bold">S’inscrire</button>
    </div>

    {{ form_end(registrationForm) }}

    <p class="text-center mt-4 small text-muted">
      Vous avez déjà un compte ? <a href="{{ path('app_login') }}" class="text-decoration-none">Connectez-vous</a>
    </p>
  </div>
</div>
{% endblock %}
