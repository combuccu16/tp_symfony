{% extends 'base.html.twig' %}

{% block title %}Livres disponibles{% endblock %}

{% block navbar %}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('user_home') }}">Espace Utilisateur</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarUser" aria-controls="navbarUser" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarUser">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item"><a class="nav-link" href="{{ path('user_home') }}">Home</a></li>
                <li class="nav-item"><a class="nav-link active" href="{{ path('user_livre_index') }}">Livres</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('livre_search') }}">Rechercher</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('panier_index') }}">Panier</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('commande_mes_commandes') }}">Commande</a></li>
            </ul>
            <a href="{{ path('app_login') }}" class="btn btn-outline-light">DÃ©connexion</a>
        </div>
    </div>
</nav>
{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 class="mb-4 text-center text-primary">ðŸ“š Nos livres disponibles</h2>

    <div class="row">
        {% for livre in livres %}
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-primary">{{ livre.titre }}</h5>
                        <p class="card-text text-muted small">{{ livre.description|slice(0, 100) ~ '...' }}</p>
                        <p class="fw-bold">Prix : {{ livre.price }} â‚¬</p>

                        {% if livre.stock > 0 %}
                            <p class="text-success">
                                Stock : {{ livre.stock }}
                                {% if livre.stock <= 3 %}
                                    <span class="text-warning">(stock limitÃ©)</span>
                                {% endif %}
                            </p>
                        {% else %}
                            <p class="text-danger fw-bold">Rupture de stock</p>
                        {% endif %}

                        <a href="{{ path('user_livre_show', {'id': livre.id}) }}" class="btn btn-sm btn-outline-primary mt-auto">Voir plus</a>

                        {% if livre.stock > 0 %}
                            <form action="{{ path('panier_add') }}" method="POST" class="mt-2">
                                <input type="hidden" name="livreId" value="{{ livre.id }}">
                                <input type="number" name="quantity" value="1" min="1" max="{{ livre.stock }}" class="form-control form-control-sm mb-2" />
                                <input type="hidden" name="_token" value="{{ csrf_token('add-to-cart' ~ livre.id) }}">
                                <button type="submit" class="btn btn-sm btn-success w-100">Ajouter au panier</button>
                            </form>
                        {% else %}
                            <button class="btn btn-sm btn-secondary mt-2 w-100" disabled>Indisponible</button>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% else %}
            <p class="text-center">Aucun livre disponible pour le moment.</p>
        {% endfor %}
    </div>
</div>
{% endblock %}

