{% extends 'base.html.twig' %}

{% block title %}Ajouter du stock pour {{ livre.titre }}{% endblock %}

{% block navbar %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="{{ path('admin_dashboard') }}">Admin</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarAdmin">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarAdmin">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" href="{{ path('admin_dashboard') }}">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('admin_livre_index') }}">Livres</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('admin_livre_add') }}">Ajouter Livre</a></li>
                </ul>
                <form method="post" action="{{ path('app_logout') }}">
                <button class="btn btn-outline-light">Déconnexion</button>
            </form>
            </div>
        </div>
    </nav>
{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2>Ajouter du stock pour <strong>{{ livre.titre }}</strong></h2>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'error' ? 'danger' : label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <form method="POST" action="{{ path('admin_livre_add_stock', {'id': livre.id}) }}">
        <div class="mb-3">
            <label for="added_stock" class="form-label">Quantité à ajouter</label>
            <input type="number" class="form-control" id="added_stock" name="added_stock" min="1" required>
        </div>
        <button type="submit" class="btn btn-primary">Ajouter au stock</button>
        <a href="{{ path('admin_livre_index') }}" class="btn btn-secondary">Retour à la liste</a>
    </form>
</div>
{% endblock %}
