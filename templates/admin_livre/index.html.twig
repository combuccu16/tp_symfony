{% extends 'base.html.twig' %}

{% block title %}Gestion des livres{% endblock %}

{% block navbar %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="{{ path('admin_dashboard') }}">Admin</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarAdmin">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarAdmin">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" href="{{ path('admin_dashboard') }}">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('admin_livre_index') }}">Livres</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('admin_livre_add') }}">Ajouter Livre</a></li>
                </ul>
                 <form method="post" action="{{ path('app_logout') }}">
                <button class="btn btn-outline-light">Déconnexion</button>
            </form>
            </div>
        </div>
    </nav>
{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 class="mb-4 text-center">Liste des livres</h2>

    <a href="{{ path('admin_livre_add') }}" class="btn btn-success mb-3">
        <i class="bi bi-plus-circle"></i> Ajouter un nouveau livre
    </a>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <table class="table table-bordered table-hover align-middle">
        <thead class="table-primary text-center">
            <tr>
                <th>Titre</th>
                <th>Auteur</th>
                <th>Prix</th>
                <th>Stock</th>
                <th>Date de publication</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for livre in livres %}
            <tr>
                <td>{{ livre.titre }}</td>
                <td>{{ livre.author }}</td>
                <td class="text-end">{{ livre.price }} €</td>
                <td class="text-center">{{ livre.stock }}</td>
                <td class="text-center">{{ livre.publicationDate ? livre.publicationDate|date('Y-m-d') : 'N/A' }}</td>
                <td class="text-center">
                    <a href="{{ path('admin_livre_edit', {id: livre.id}) }}" class="btn btn-sm btn-primary me-1">
                        <i class="bi bi-pencil"></i> Modifier
                    </a>

                    <a href="{{ path('admin_livre_add_stock', {'id': livre.id}) }}" class="btn btn-sm btn-warning me-1">
                        <i class="bi bi-plus-square"></i> Ajouter du stock
                    </a>

                    <form method="post" action="{{ path('admin_livre_delete', {id: livre.id}) }}" style="display:inline-block;" 
                          onsubmit="return confirm('Voulez-vous vraiment supprimer ce livre ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ livre.id) }}">
                        <button class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Supprimer
                        </button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr><td colspan="6" class="text-center">Aucun livre trouvé.</td></tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

